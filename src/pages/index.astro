---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Flipcard from "../components/Flipcard.astro";
import ProjectlessFlipcard from "../components/ProjectlessFlipcard.astro";
import niereact from "../assets/project-images/niereact-preview.png";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Image from "astro/components/Image.astro";
import tape from "../assets/misc/tape.png";
import projecttape from "../assets/misc/projecttape.png";
import train from "../assets/misc/train.jpg";
import coolbg from "../assets/misc/nicepic.png";
import dithering from "../assets/misc/dithering.png";
import linedpaper from "../assets/misc/linedpaper.png";
import HelloMyNameIsCard from "../components/HelloMyNameIsCard.astro";

const projects = await getCollection("projects");
---

<Layout title="lumen">
    <main class="">
        <div class="">
            <div class="bg-off-white min-h-96 z-10 relative">
                <div class="mx-auto max-w-5xl pt-32 px-6 md:px-10">
                    <div class="grid md:grid-cols-3 gap-8">
                        <div class="md:col-span-2">
                            <div class="relative">
                                <Image
                                    src={tape}
                                    alt="tape"
                                    class="absolute h-16 w-auto top-0 bottom-0 -mt-8 left-0 right-0 mx-auto drop-shadow-md z-10"
                                />
                                <HelloMyNameIsCard name="aidan" />
                            </div>
                        </div>
                        <ProjectlessFlipcard
                            image={train}
                            subtitle="a pic i took"
                        >
                            <p class="text-xl">
                                i took this picture on the skytrain and i think
                                it looks kinda super sweet
                            </p>
                        </ProjectlessFlipcard>
                    </div>
                    <div
                        class="relative w-full mt-10 px-6 md:px-10 pt-10 pb-9 rounded-md skew-y-1 shadow-md"
                        style={`background-image: url('${linedpaper.src}')`}
                    >
                        <div class="absolute right-0 left-0 mx-auto">
                            <Image
                                src={tape}
                                alt="tape"
                                class="absolute h-16 w-auto top-0 bottom-0 mt-[-4.75rem] left-0 right-0 mx-auto drop-shadow-md"
                            />
                        </div>
                        <p class="text-2xl leading-[2.5rem]">
                            i'm aidan. welcome to my portfolio site! <br />
                            i'm a 22 year old programmer. i mostly do web dev for
                            work, but i also like doing it as a hobby (plus some
                            game dev).<br />
                            this site was made using astro!
                        </p>
                    </div>
                </div>
            </div>
            <div class="my-0 mx-auto relative">
                <div
                    class="absolute right-0 left-0 mx-auto h-36 bg-off-white skew-y-3 -translate-y-1/2"
                >
                    <Image
                        src={projecttape}
                        alt="tape"
                        class="absolute h-24 w-auto top-0 bottom-0 mt-24 left-0 right-0 mx-auto drop-shadow-md"
                    />
                </div>
            </div>
            <!-- <div class="relative">
                <div
                    class="h-24 w-[110%] top-0 bottom-0 rotate-2 my-auto bg-white absolute left-0 right-0 mx-auto"
                >
                    <div class="relative flex">
                        
                    </div>
                </div>
            </div> -->
        </div>

        <div
            class="bg-cover bg-center"
            style={`background-image: url('${coolbg.src}')`}
        >
            <div
                class="pt-40 pb-10"
                style={`background-image: url('${dithering.src}')`}
            >
                <div
                    class="grid md:grid-cols-2 lg:grid-cols-3 max-w-7xl mx-auto gap-4 px-6 md:px-10 mb-40"
                >
                    {
                        projects.map((project) => (
                            <Flipcard project={project}>
                                <p class="text-xl">{project.data.cardDesc}</p>
                            </Flipcard>
                        ))
                    }
                </div>
            </div>
        </div>
    </main>
</Layout>

