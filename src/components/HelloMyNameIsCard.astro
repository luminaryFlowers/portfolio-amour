---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<div
    class="relative rounded-3xl bg-white border-4 border-white shadow-md w-full aspect-video overflow-hidden flex flex-col -rotate-1"
>
    <div
        class="bg-red-500 text-white aspect-[6/1] w-full text-center py-2 flex flex-col justify-center items-center font-noto font-bold"
    >
        <p class="text-4xl">Hello</p>
        <p>my name is</p>
    </div>
    <div class="flex text-center justify-center items-center flex-grow p-4">
        <h1 class="text-6xl font-bold">{name}</h1>
    </div>
    <div class="bg-red-500 aspect-[18/1] w-full mt-auto"></div>
</div>
